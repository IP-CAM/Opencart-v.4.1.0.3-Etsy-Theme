                 placeholder="{{ text_newsletter_placeholder|default('Enter your email') }}" 
                 class="etsy-newsletter-input"
                 required
                 aria-label="Email address for newsletter signup" />
          <button type="submit" class="etsy-newsletter-button">
            {{ text_newsletter_button|default('Subscribe') }}
          </button>
